<script>
  /* Sidenav code*/
  function myFunction(x) {
    x.classList.toggle("change");
  }

  function openNav() {
    document.getElementById("mySidenav").style.width = "350px";
}

  function closeNav() {
    document.getElementById("mySidenav").style.width = "0px";
    document.querySelector('.menu').classList.remove('change');
  }

  /*Navbar scroll code */
  window.onscroll = function() {scrollFunction()};

  function scrollFunction() {
    if (document.body.scrollTop > 80 || document.documentElement.scrollTop > 80) {
      document.getElementById("navbar").style.height = "70px";
      document.getElementById("navbar").style.backgroundColor = "#2E8B57";
      document.getElementById("navbar").style.borderBottom = "3px solid black";

       // Adjust logo height and padding on scroll
      document.getElementById("brand_logo").style.height = "40px";

      document.getElementById("brand_title").style.fontSize = "28px";
      document.getElementById("brand_title").style.color = "black";

      // Adjust menu bar color
      document.getElementById("bar1a").style.backgroundColor = "black";
      document.getElementById("bar2a").style.backgroundColor = "black";
      document.getElementById("bar3a").style.backgroundColor = "black";

    } else {
     document.getElementById("navbar").style.height = "100px";
     document.getElementById("navbar").style.backgroundColor = "transparent";
     document.getElementById("navbar").style.borderBottom = "0px";
     document.getElementById("navbar").style.padding = "0px 0px";

     // Restore original logo size and padding
     document.getElementById("brand_logo").style.height = "80px";
     //document.getElementById("brand_logo").style.width = "80px";
     document.getElementById("brand_logo").style.padding = "0";

     document.getElementById("brand_title").style.fontSize= "48px";
     document.getElementById("brand_title").style.color = "white";

     document.getElementById("bar1a").style.backgroundColor = "white";
     document.getElementById("bar2a").style.backgroundColor = "white";
     document.getElementById("bar3a").style.backgroundColor = "white";
    }
  }
</script>

